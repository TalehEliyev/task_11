<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="0"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/group_31__1_" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textSubTitle"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="5dp"
            android:text="Get Started"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="50dp"
            android:text="by creating a free account."
            android:textSize="14sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66C4C4C4"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0dp"
            app:endIconDrawable="@drawable/vector11" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/vector11"
            android:hint="Enter your email"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:textColorHint="@color/black"
            android:textSize="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#66C4C4C4"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0dp"
            app:endIconDrawable="@drawable/vector11"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/vector11"
            android:hint="Password"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:textColorHint="@color/black"
            android:textSize="15dp" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/vector11"
            android:hint="Password"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:textColorHint="@color/black"
            android:textSize="15dp" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/vector11"
            android:hint="Password"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:textColorHint="@color/black"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="545dp"
            android:layout_weight="4"
            android:gravity="bottom"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E40909"
                android:paddingVertical="13dp"
                android:text="Next"
                android:textSize="20dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/icoon1"
                app:iconGravity="textEnd"
                app:iconPadding="16dp"
                app:iconSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="58dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:text="Already a member?"
                    android:textColor="@color/black"
                    android:textSize="20sp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="50dp"
                    android:text="Log In"
                    android:textColor="#FF3951"
                    android:textSize="20sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>